@model RealEstateWebUI.Dtos.BottomGridDto.UpdateBottomGridDto

@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Update Bottom Grid</h6>
                <form method="post">
                    <input type="text" asp-for="BottomGridId" hidden />
                    <label>Icon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label>Title</label>
                    <input asp-for="Title" class="form-control" />
                    <br />
                    <label>Description</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <button class="btn btn-warning">Update Bottom Grid</button>
                </form>
            </div>
        </div>
    </div>
</div>


