@model List<RealEstateWebUI.Dtos.EmployeeDtos.ResultEmployeeDto>

@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Employee Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.EmployeeId</th>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>@item.Mail</td>
                            <td><a class="btn btn-danger" href="/Employee/DeleteEmployee/@item.EmployeeId">Delete</a></td>
                            <td><a class="btn btn-warning" href="/Employee/UpdateEmployee/@item.EmployeeId">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-success" href="/Employee/CreateEmployee">Create Employee</a>
        </div>
    </div>
</div>
