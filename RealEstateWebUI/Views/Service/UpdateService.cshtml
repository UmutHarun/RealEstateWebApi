@model RealEstateWebUI.Dtos.ServicesDto.UpdateServiceDto
@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Update Service</h6>
                <form method="post">
                    <input type="text" asp-for="ServiceId" hidden class="form-control" />
                    <label>Service Name</label>
                    <input type="text" asp-for="ServiceName" class="form-control" />
                    <br />
                    <button class="btn btn-success">Add Service</button>
                </form>
            </div>
        </div>
    </div>
</div>