@model RealEstateWebUI.Dtos.WhoWeAreDetailDtos.UpdateWhoWeAreDetailDto

@{
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Update About</h6>
                <form method="post">
                    <input type="text" hidden asp-for="WhoWeAreDetailId" class="form-control" />
                    <br />
                    <label>Title</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Subtitle</label>
                    <input asp-for="Subtitle" class="form-control" />
                    <br />
                    <label>Description 1</label>
                    <input type="text" asp-for="Description1" class="form-control" />
                    <br />
                    <label>Description 2</label>
                    <input type="text" asp-for="Description2" class="form-control" />
                    <br />
                    <button class="btn btn-warning">Update About</button>
                </form>
            </div>
        </div>
    </div>
</div>
